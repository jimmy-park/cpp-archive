{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/I",
                "${workspaceFolder}",
                "/O2",
                "/Zi",
                "/EHsc",
                "/std:c++17",
                "/Fd:",
                "${fileDirname}\\",
                "/Fe:",
                "${fileDirname}\\",
                "/Fo:",
                "${fileDirname}\\",
                "${file}"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out",
                "-std=c++17",
                "-O2",
                "-Wall",
                "-I",
                "${workspaceFolder}"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}